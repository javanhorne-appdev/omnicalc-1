<form action="/payment/results">
  <div>
    <label for="user_apr"> APR </label>

    <input type="text" id="user_apr" name="apr" placeholder="E.g. 5.42">
  </div>

  <div>
    <label for="user_years"> Number of years </label>

    <input type="text" id="user_years" name="years" placeholder="How many years to repay?">
